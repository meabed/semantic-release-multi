{
  "name": "semantic-release-multi",
  "version": "1.0.0",
  "description": "Plugins for `semantic-release` allowing it to be used with a monorepo.",
  "repository": {
    "type": "git",
    "url": "https://github.com/meabed/semantic-release-multi"
  },
  "license": "MIT",
  "author": {
    "name": "Mohamed Meabed",
    "email": "mo@meabed.com",
    "url": "https://meabed.com"
  },
  "maintainers": [
    {
      "name": "Mohamed Meabed",
      "email": "mo@meabed.com",
      "url": "https://meabed.com"
    }
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p . --skipLibCheck",
    "ci": "npm run lint && npm t",
    "format": "prettier --write --single-quote --trailing-comma es5",
    "format:all": "yarn format \"./**/*.js\"",
    "lint": "eslint src __tests__",
    "lint-fix": "yarn lint -- --fix",
    "prepare": "yarn husky install",
    "prepublishOnly": "yarn build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "lint-staged": {
    "src/*.{ts,tsx,js,jsx}": "prettier --write",
    "__tests__/*.{ts,tsx,js,jsx}": "prettier --write"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "execa": "^8.0.0",
    "p-limit": "^4.0.0",
    "pkg-up": "^4.0.0",
    "ramda": "^0.29.0",
    "read-pkg": "^9.0.0",
    "semantic-release-plugin-decorators": "^4.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "29.5.12",
    "@types/ramda": "^0.29.0",
    "@types/semantic-release": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "file-url": "^4.0.0",
    "fs-extra": "^11.1.0",
    "get-stream": "^8.0.0",
    "git-log-parser": "^1.2.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^15.0.0",
    "p-each-series": "^3.0.0",
    "prettier": "^3.0.0",
    "pretty-quick": "4.0.0",
    "semantic-release": "^23.0.0",
    "semantic-release-github-pr": "^6.0.1",
    "tempy": "3.1.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  },
  "peerDependencies": {
    "semantic-release": ">=15.11.x"
  },
  "engines": {
    "node": ">=12"
  },
  "engineStrict": false
}
